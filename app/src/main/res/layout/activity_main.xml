<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.nestedmango.loginapp.MainActivity">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/logpassword"
        android:layout_below="@+id/logemail"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:hint="Password"
        android:layout_alignEnd="@+id/logemail"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/logemail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logemail"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="User email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Login"
        android:id="@+id/logbutton"
        android:onClick="LoginProcess"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Reset"
        android:id="@+id/resetbutton"
        android:onClick="resetbutton"
        android:layout_alignTop="@+id/logbutton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Now"
        android:id="@+id/sinup"
        android:onClick="sinupProcess"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="67dp" />

</RelativeLayout>
